@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form id="account" method="post">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Email address</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                               type="email" style="margin-top: 10px" required="" placeholder="Email" minlength="6" />
                        <label class="form-label" for="form1Example23">Password</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"
                                type="password" style="margin-top: 10px" required="" placeholder="Password" minlength="6" />
                    </div>
                    <!-- Submit button -->
                    <button class="btn btn-primary d-block box-shadow w-100" id="submit-id-submit" type="submit">
                        Login
                    </button>
                    <div class="d-flex justify-content-between">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration: none;">Forgot your password?</a>
                    </div>
                    <div class="option-container d-flex justify-content-center text-center">
                        <div class="lead-text">
                                Do not have an account?<a class="page-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register!</a>
                        </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
