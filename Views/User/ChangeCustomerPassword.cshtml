@model FPTBook.ViewModels.User.UpdatePassword

@{
    ViewBag.Title = "Change Password - FPT Book";
    Layout = "_Layout";
}

<h1 class="text-center text-capitalize" style="color: #034ea2; font-size:3.5vw;">Change Password</h1>

<form asp-action="ChangeCustomerPassword" method="post" style="width:55%;margin-left:16vw;">
    <input asp-for="Id" type="hidden" value="@Model.Id" />

    <div class="form-group font-weight-bold h5">
        <label for="Password">New Password</label>
        <input id="Password" name="Password" asp-for="Password" type="password" class="form-control" placeholder="Enter a new password">
        <span asp-validation-for="Password" class="text-danger"></span>
        <small class="form-text text-muted">Your password must contain at least one uppercase letter, one lowercase letter, one number, and one special character.</small>
    </div>

    <div class="form-group">
        <div class="form-group d-flex justify-content-between">
            <button type="reset" class="btn btn-danger">Cancel</button>
            <button type="submit" class="btn btn-primary" value="Confirm" onclick="return confirm('Are you sure you want to update your password?');">Confirm</button>
        </div>
    </div>
</form>

